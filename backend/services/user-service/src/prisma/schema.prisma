generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid()) @db.Uuid

  /// Stable identifier from upstream auth system (trusted, verified upstream).
  userId      String   @unique

  username    String
  displayName String
  avatarUrl   String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}
